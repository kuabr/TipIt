<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#006000"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chooseText:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/betResult"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFF00"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/showTournOverviewButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/showTournaments"
        android:textSize="10dp" />

    <Button
        android:id="@+id/showGameBetsButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/showGameBets"
        android:textSize="10dp" />

    <Button
        android:id="@+id/addGameBetsButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:text="@string/addGameBets"
        android:textSize="10dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/showWinnerBetsButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/showWinnerBets"
        android:textSize="10dp" />

    <Button
        android:id="@+id/addWinnerBetsButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:text="@string/addWinnerBets"
        android:textSize="10dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/showResultsButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/showResults"
        android:textSize="10dp" />

    <Button
        android:id="@+id/addResultsButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:text="@string/addResults"
        android:textSize="10dp" />

    <Button
        android:id="@+id/changeResultsButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:text="@string/changeResults"
        android:textSize="10dp" />

    <Button
        android:id="@+id/addMatchesButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/addMatches"
        android:textSize="10dp" />

    <Button
        android:id="@+id/changeMatchesButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:text="@string/changeMatches"
        android:textSize="10dp" />

    <Button
        android:id="@+id/addWinnersButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/addWinners"
        android:textSize="10dp" />

    <Button
        android:id="@+id/changeWinnersButton"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:text="@string/changeWinners"
        android:textSize="10dp" />

</LinearLayout>